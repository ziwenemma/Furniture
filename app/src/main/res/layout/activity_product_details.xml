<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:id="@+id/product_image_de"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_image_de"
        android:text="Product Name"
        android:textSize="18sp"
        android:id="@+id/product_name_de"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name_de"
        android:text="desciption"
        android:textSize="15sp"
        android:id="@+id/product_desc_de"
     android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_desc_de"
        android:text="Product price"
        android:textSize="18sp"
        android:id="@+id/product_price_de"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_price_de"
        android:text="4.7"
        android:background="#8A2BE2"
        android:textSize="18sp"
        android:id="@+id/product_rating_de"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />


    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
    android:layout_width="250dp"
    android:layout_height="50dp"
    android:elevation="6dp"
    app:textSize="13dp"
    app:initialNumber="1"
    app:finalNumber="10"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/product_rating_de"
    android:layout_marginTop="10dp"
    android:id="@+id/number_btn"
    />

<Button
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/number_btn"
    android:text="Add to cart"
    android:textSize="18sp"
    android:id="@+id/cartbtn"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:layout_marginTop="10dp"/>
</RelativeLayout>